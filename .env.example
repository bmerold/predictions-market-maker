# Kalshi API Credentials
# Get these from https://kalshi.com/account/api
KALSHI_API_KEY=your_api_key_here
KALSHI_API_SECRET=your_api_secret_here

# Environment: demo or prod
KALSHI_ENVIRONMENT=prod

# Database URL (SQLite for local, PostgreSQL for production)
# Local: sqlite+aiosqlite:///./data/market_maker.db
# AWS: postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./data/market_maker.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Web UI
WEB_HOST=127.0.0.1
WEB_PORT=8080
